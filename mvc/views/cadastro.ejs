<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            height: 100vh;
            background: rgb(238,174,202);
            background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 40%);
        }
        main{
            height: 100vh;
        }
    </style>
</head>
<body>
    <main class="d-flex justify-content-evenly flex-column">
        <div class="d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <% if (erro) { %>
                        <div class="alert alert-danger mt-3">
                            <%= erro %>
                        </div>
                    <% } %>
                    
                    <h3>Cadastro</h3>
                    <form action="/cadastrar" method="post">
                        <div class="modal-body">
                            <p class="text-dark">Usuario</p>
                            <input class="form-control me-2" type="search"aria-label="Search" id="conta" name="conta">
                            <p class="text-dark">Senha</p>
                            <input class="form-control me-2" type="search"aria-label="Search" id="Senha" name="Senha">
                            <p class="text-dark">Email</p>
                            <input class="form-control me-2" type="search"aria-label="Search" id="email" name="email">
                            <p class="text-dark">autenticado</p>
                            <input class="form-control me-2" type="search"aria-label="Search" value="0" id="autenticado" name="autenticado">
                            <p class="text-dark">Grupo</p>
                            <div class="mb-3">
                                <select class="ui dropdown" name="grupo">
                                    <option value="">Grupos</option>
                                    <% for (let i = 0; i < grupo.length; i ++) { %>
                                        <option value="<%= grupo[i].id %>">ID <%= grupo[i].id %> = <%= grupo[i].nome %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-evenly">
                            <button type="submit" class="btn btn-primary">Criar</button>
                        </div>
                    </form>
                    
                    <div class="mt-3">
                        <a href="/login">Voltar para login</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>